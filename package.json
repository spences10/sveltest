{
	"name": "sveltest",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/spences10/sveltest.git"
	},
	"homepage": "https://github.com/spences10/sveltest",
	"bugs": {
		"url": "https://github.com/spences10/sveltest/issues"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "prettier --write . && eslint . --fix",
		"test:unit": "vitest",
		"test:server": "vitest --project=server",
		"test:client": "vitest --project=client",
		"test:ssr": "vitest --project=ssr",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"coverage": "vitest --run --coverage",
		"generate:llms": "tsx scripts/generate-llms.ts",
		"generate:ai-rules": "tsx scripts/generate-ai-rules.ts",
		"test:ai-rules": "tsx scripts/generate-ai-rules.ts --dry-run"
	},
	"devDependencies": {
		"@anthropic-ai/sdk": "^0.68.0",
		"@changesets/cli": "^2.29.7",
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.0",
		"@fontsource-variable/inter": "^5.2.8",
		"@fontsource-variable/victor-mono": "^5.2.8",
		"@playwright/test": "^1.56.1",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.48.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.16",
		"@types/node": "^24.10.0",
		"@vitest/browser": "^4.0.6",
		"@vitest/browser-playwright": "^4.0.6",
		"@vitest/coverage-v8": "^4.0.6",
		"daisyui": "^5.4.2",
		"eslint": "^9.39.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"fathom-client": "^3.7.2",
		"globals": "^16.5.0",
		"jsdom": "^27.1.0",
		"mdsvex": "^0.12.6",
		"playwright": "^1.56.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-external-links": "^3.0.0",
		"rehype-slug": "^6.0.0",
		"shiki": "^3.14.0",
		"svelte": "^5.43.2",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.16",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.3",
		"vite": "^7.1.12",
		"vitest": "^4.0.6",
		"vitest-browser-svelte": "^2.0.1",
		"zod": "^4.1.12"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@tailwindcss/oxide",
			"esbuild"
		]
	}
}
