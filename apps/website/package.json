{
	"name": "@sveltest/website",
	"private": true,
	"version": "0.0.2",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/spences10/sveltest.git"
	},
	"homepage": "https://github.com/spences10/sveltest",
	"bugs": {
		"url": "https://github.com/spences10/sveltest/issues"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "prettier --write . && eslint . --fix",
		"test:unit": "vitest",
		"test:server": "vitest --project=server",
		"test:client": "vitest --project=client",
		"test:ssr": "vitest --project=ssr",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"coverage": "vitest --run --coverage"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@eslint/compat": "^2.0.2",
		"@eslint/js": "^9.39.2",
		"@fontsource-variable/inter": "^5.2.8",
		"@fontsource-variable/victor-mono": "^5.2.8",
		"@playwright/test": "^1.58.1",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^25.2.0",
		"@vitest/browser": "^4.0.18",
		"@vitest/browser-playwright": "^4.0.18",
		"@vitest/coverage-v8": "^4.0.18",
		"daisyui": "^5.5.17",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"fathom-client": "^3.7.2",
		"globals": "^17.3.0",
		"jsdom": "^28.0.0",
		"mdsvex": "^0.12.6",
		"playwright": "^1.58.1",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-external-links": "^3.0.0",
		"rehype-slug": "^6.0.0",
		"shiki": "^3.22.0",
		"svelte": "^5.49.2",
		"svelte-check": "^4.3.6",
		"tailwindcss": "^4.1.18",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0",
		"vite": "^7.3.1",
		"vitest": "^4.0.18",
		"vitest-browser-svelte": "^2.0.2",
		"zod": "^4.3.6"
	}
}
